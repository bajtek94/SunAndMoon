<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Location preference">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_location"
        android:inputType="textCapWords"
        android:key="@string/pref_manual_location"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_manual_location"
        android:summary="@string/pref_summary_location"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Unit preference">
        <ListPreference
            android:defaultValue="@string/pref_default_unit"
            android:entries="@array/pref_temperature_unit_titles"
            android:entryValues="@array/pref_temperature_unit_values"
            android:key="@string/pref_temperature_unit"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_temperature_unit"
            android:summary="@string/pref_summary_temperature_unit"/>

    </PreferenceCategory>

</PreferenceScreen>